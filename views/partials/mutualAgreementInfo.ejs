<form class="form-horizontal">
	<div class="row">
	<fieldset>

		<!-- Form info -->
		<div class="form-group">
			<label class="control-label col-sm-2" for="provider">Provider:</label>
			<div class="col-sm-5">
	        	<h5><a id="provider" href=<%= providerLink %>><%= providerId %></a></h5>
	      	</div>
      	</div>

      	<div class="form-group">
			<label class="control-label col-sm-2" for="consumer">Consumer:</label>
			<div class="col-sm-5">
	        	<h5><a id="consumer" href=<%= consumerLink %>><%= consumerId %></a></h5>
	      	</div>
      	</div>

      	<div class="form-group">
			<label class="control-label col-sm-2" for="postLink">Post:</label>
			<div class="col-sm-5">
	        	<h5><a id="postLink" href=<%= postLink %>><%= postTitle %></a></h5>
	      	</div>
      	</div>

      	<div class="form-group">
			<label class="control-label col-sm-2" for="finishDate">Service Finish Date:</label>
			<div class="col-sm-5">
				<% var finishDate = finishDay + "/" + finishMonth + "/" + finishYear + " (dd/mm/yyyy)"%>
	        	<h5 id="finishDate"><%= finishDate %></h5>
	      	</div>
      	</div>

      	<div class="form-group">
			<label class="control-label col-sm-2" for="description">Service Description:</label>
			<div class="col-sm-5">
	        	<h5 id="description"><%= description %></h5>
	      	</div>
      	</div>

		<!-- Form actions -->
		<div class="form-group">
			<label class="control-label col-sm-2" for="providerConsent">Provider Consent:</label>
			<button id="providerConsent" name="agreementButton" type="button" class="btn btn-danger" disabled>Disagree</button>
		</div>

		<div class="form-group">
			<label class="control-label col-sm-2" for="consumerConsent">Consumer Consent:</label>
			<button id="consumerConsent" name="agreementButton" type="button" class="btn btn-danger" disabled>Disagree</button>
		</div>

		<div class="form-group">
			<div class="col-xs-4 text-center">
				<button id="editButton" name="agreementButton" type="button" class="btn btn-primary btn-lg" disabled>Edit Agreement</button>
			</div>

			<div class="col-xs-4 text-center">
				<button id="finalizeButton" name="agreementButton" type="button" class="btn btn-primary btn-lg" disabled>Finalize Agreement</button>
			</div>
		</div>

	</fieldset>
	</div>	
</form>